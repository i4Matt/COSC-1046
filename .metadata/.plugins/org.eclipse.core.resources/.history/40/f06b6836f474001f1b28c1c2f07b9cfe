package Calc;

import java.util.Scanner;

public class Calc {
	public static void main(String[] args) {
		// CREATE SCANNER OBJECT
		Scanner sc = new Scanner(System.in);
		boolean alive = true;
		
		double num1 = 0;
		double num2 = 0;
		
		int numCatch = 1;
		
		while(alive) {
			System.out.print("Please insert a number: ");
			try {
				num1 = sc.nextDouble();
				alive = false;
			}catch(Exception e) {
				if (numCatch == 3) {
					System.out.println("\nYou have selected the number 6.\n");
					num1 = 6;
					alive = false;
				}else {
					System.out.println("\nPlease insert a valid number.");
					numCatch += 1;
				}
				sc.next();
			}
		}
		
		alive = true; numCatch = 1;
		while(alive) {
			System.out.print("Please insert a second number: ");
			try {
				num2 = sc.nextDouble();
				alive = false;
			}catch(Exception e) {
				if (numCatch == 3) {
					System.out.println("\nYou have selected the number 9.\n");
					num2 = 9;
					alive = false;
				}else {
					System.out.println("\nPlease insert a valid number.");
					numCatch += 1;
				}
				sc.next();
			}
		}
		
		double TotAdd = num1 + num2;
		double TotSub = num1 - num2;
		double TotMul = num1 * num2;
		double TotDiv = 0;
		try {
			TotDiv = num1 / num2;
		} catch(Exception e) {
			TotDiv = 0;
		}
		
		double TotThing = num1 % num2;
		
		System.out.print("Output: \n Addition - " + TotAdd + "\n Subtract - " + TotSub + "\n Multiply - " + TotMul + "\n Division - " + TotDiv + "\n Thing - " + TotThing);
		sc.close();
	}
}
