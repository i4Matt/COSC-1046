package Calc;

import java.util.Scanner;

public class Calc {
	public static void main(String[] args) {
		// CREATE SCANNER OBJECT
		Scanner sc = new Scanner(System.in);
		
		double num1, num2 = 0;
		
		boolean alive = true;
		while (alive) {
			System.out.print("Please insert a number: ");
			try {
				num1 = sc.nextDouble();
				alive = false;
			}catch(NumberFormatException e) {
				System.out.print("Please enter a valid Number: ");
			}
		}
		
		alive = true;
		while (alive) {
			System.out.print("Please insert a number: ");
			try {
				num2 = sc.nextDouble();
				alive = false;
			}catch(NumberFormatException e) {
				System.out.print("Please enter a valid Number: ");
			}
		}
		
		double TotAdd = num1 + num2;
		double TotSub = num1 - num2;
		double TotMul = num1 * num2;
		
		try {
			double TotDiv = num1 / num2;
		} catch(ArithmeticException e) {
			String TotDiv = "Null";
		}
		
		double TotThing = num1 % num2;
		
		System.out.print("Output: \n Addition - " + TotAdd + "\n Subtract - " + TotSub + "\n Multiply - " + TotMul + "\n Division - " + TotDiv + "\n Thing - " + TotThing);
		sc.close();
	}
}
