package ScannerProject;

import java.util.Scanner;

public class ScannerProject {

	public static void main(String[] args) {
		// START OF TASK 2
		Scanner sc = new Scanner(System.in); // CREATE SCANNER
		System.out.print("Please insert your first name: "); // PRINT
		String firstName = sc.next(); // GET INPUT FOR FIRST NAME.
		System.out.print("\nPlease insert your last name: "); // PRINT
		String lastName = sc.next(); // GET INPUT FOR LAST NAME
		String fullName = firstName + " " + lastName; // COMBINE FIRST AND LAST NAME.
		
		System.out.println("\n \nHello " + fullName + "!"); // PRINT NAME.
		// END OF TASK 2.
		
		
		// START OF TASK 3
		char firstInitial = firstName.toUpperCase().charAt(0); // GET FIRST LETTER OF FIRST NAME AND CAPITALIZE IT.
		System.out.println("First Initial: " + firstInitial + "."); // PRINT
		
		String FULLNAME = fullName.toUpperCase(); // CAPITALIZE FULL NAME
		
		System.out.println("Name CAPITALISED: " + FULLNAME); // PRINT NAME
		int nameLength = FULLNAME.length() - 1; // GET LENGTH OF FULL NAME (-1 TO REMOVE THE SPACE FROM COUNT)
		
		System.out.println("Name Length: " + nameLength); // PRINT LENGTH.
		// END OF TASK 3.
		
		sc.close();
	}

}
